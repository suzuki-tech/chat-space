.chat-main__message
  .chat-main__message__upper-info
    .chat-main__message__list__upper-info__talker
      = message.user.name
    .chat-main__message__list__upper-info__date
      = message.created_at.strftime("%Y年%m月%d日　%H時%M分")
  .chat-main__message__lower
    - if message.content.present?
      %p.chat-main__message__lower__content
        = message.content
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?