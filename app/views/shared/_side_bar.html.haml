.side-bar
  .side-bar__header
    .side-bar__header__box
      %p.side-bar__header__box__user-name
        = current_user.name
      %ul.side-bar__header__box__menu
        %li.side-bar__header__box__new-group
          =link_to new_group_path(current_user) do
            =icon('fas','edit')
        %li.side-bar__header__box__edit-user
          = link_to edit_user_path(current_user) do
            =icon('fa', 'cog')

  .side-bar__group
    - current_user.groups.each do |group|
      .side-bar__group__box
        =link_to group_messages_path(group) do
          .side-bar__group__box__name
            = group.name
          .side-bar__group__box__notice
            = group.show_last_message